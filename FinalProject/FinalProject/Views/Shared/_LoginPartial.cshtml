@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
	<!--Register (this will show when user has not logged in) and Tickets Ordered (this will only show when the user has logged in) -->
	<li>@Html.ActionLink("Find an event", "Index", "FindEvent", routeValues: null, htmlAttributes: new { id = "FindEventLink" })</li>
	<li>@Html.ActionLink("Organize an event", "Index", "OrganizeEvent", routeValues: null, htmlAttributes: new { id = "orangizeeventLink" })</li>
	<li>@Html.ActionLink("Tickets Ordered", "Index", "TicketsOrdered", routeValues: null, htmlAttributes: new { id = "ticketsorderedLink" })</li>

	<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
	<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>
}
